<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <form  role="form" action="<%= systemConfig.prefixAdmin %>/footer/renent_posts/store/<%= item.id %> " method="POST">
                    <div class="form-group row">
                        <div class="row col-sm-5">
                            <label for="inputPostName" class="col-sm-12 col-form-label">Post name:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="postName"  value="<%= item.postName %> "/>
                            </div>
                        </div>
                        <div class="row col-sm-5">
                            <label for="inputTime" class="col-sm-12 col-form-label">Time:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="postTime" value="<%= item.postTime %> "/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="row col-sm-5">
                            <label for="inputUrl" class="col-sm-12 col-form-label">Url:</label>
                            <div class="col-sm-9">
                                <input type="url" class="form-control" name="postUrl" value="<%= item.postUrl %> "/>
                            </div>
                        </div>
                        <div class="row col-sm-5">
                            <div class="col-sm-9 d-flex justify-content-center align-items-center">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>